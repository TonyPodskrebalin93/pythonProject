
def custom_write(file_name, string):
    string_postion = {}
    with open(file_name, "w", encoding="utf - 8") as file:
        for i, string in enumerate(string, start=1):
            position = file.tell()
            file.write(string + '\n')
            string_postion[(i, position)] = string
        return string_postion


